					</div>
					<div class="post-page-readmore">
						<h3>
						推荐阅读：
						</h3>
						<hr>
						{{#next_post}}
							<p>最后一个 : &nbsp;&nbsp;<a href="{{url}}">{{title}}</a></p>
						{{/next_post}}
						{{#prev_post}}
							<p>下一篇文章 : &nbsp;&nbsp;<a href="{{url}}">{{title}}</a></p>
						{{/prev_post}}
					</div>
				</div>
{{/post}}
					
