{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}



<main class="mainContent" role="main">
  <article class="post {{post_class}}">
    <h1 class="postTitle" itemprop="headline">{{title}}</h1>
      <div class="postInfo">
        <span>{{author}} |</span>
        <span class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY-MM-DD"}} |</span>
        <span>reading time: <span class="eta"></span></span>
      </div>
      <div class="postCover" style="background-image:url('{{image}}')"></div>
      <section class="post-content postContent">
            {{content}}
      </section>

{{#next_post}}
<section class="recentPost">
          <p>Check the next post: <a href="{{url}}" rel="bookmark" title="{{title}}">{{title}}</a> »</p>
</section>
{{else}}
{{/next_post}}

